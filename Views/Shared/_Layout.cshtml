<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/layout.css" rel="stylesheet" />
    <title>Düzce Üniversitesi</title>
</head>

<body>
    <header>
        <!--QUICK NAV-->
        <nav>
            <ul class="nav__links">
                <li><a href="#">Personel</a></li>
                <li><a href="#">Öğrenci</a></li>
                <li><a href="https://hastane.duzce.edu.tr/" target="_blank">Hastane</a></li>
                <li><a href="https://duzceteknopark.com.tr/" target="_blank">Teknopark</a></li>
                <li><a href="https://sanalsergi.duzce.edu.tr/" target="_blank">Sanat Galerisi</a></li>
                <li><a href="https://mbs.duzce.edu.tr/AnaSayfa.aspx" target="_blank">Mezunlar</a></li>
            </ul>
        </nav>
        <div class="contact">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="cta" asp-controller="Panel" asp-action="Index">Panel Girişi</a>
            }
            else
            {
                <a class="cta" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
            }
            <a class="cta" href="https://www.instagram.com/duzceuniversite/" target="_blank"><i class="fab fa-instagram"></i></a>
            <a class="cta" href="https://twitter.com/duzceuniversite" target="_blank"><i class="fab fa-twitter"></i></a>
            <a class="cta" href="https://www.facebook.com/DuzceUniversite" target="_blank"><i class="fab fa-facebook-f"></i></a>
            <a class="cta" href="https://www.youtube.com/duzceuniversite" target="_blank"><i class="fab fa-youtube"></i></a>
        </div>
    </header>
    <!--MAIN NAV-->
    <div class="mainNavContainer container" id="mainNavContainer">
        <a asp-controller="Home" asp-action="Index"><img id="logo" src="~/imgs/logo.png" /></a>
        <div class="main-nav" id="main-nav">
            <ul class="nav__links">
                <li><a href="#">Üniversitemiz</a></li>
                <li>
                    <a href="#">Akademik <i class="fas fa-caret-down"></i></a>
                    <div class="dropdown__menu">
                        <ul>
                            <li><a href="#">Dropdown 1</a></li>
                            <li><a href="#">Dropdown 2</a></li>
                            <li>
                                <a href="#">Dropdown 3</a>
                                <i class="fas fa-caret-right"></i>
                                <div class="dropdown__menu-1">
                                    <ul>
                                        <li><a href="#">Sub Dropdown 1</a></li>
                                        <li><a href="#">Sub Dropdown 2</a></li>
                                        <li><a href="#">Sub Dropdown 3</a></li>
                                        <li><a href="#">Sub Dropdown 4</a></li>
                                        <li><a href="#">Sub Dropdown 5</a></li>
                                        <li><a href="#">Sub Dropdown 6</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li><a href="#">Dropdown 4</a></li>
                        </ul>
                    </div>
                </li>
                <li><a href="#">Araştırma</a></li>
                <li><a href="#">İhtisaslaşma</a></li>
                <li><a href="#"><span style="color: var(--duGreen)">DÜ</span>Yayınlar</a></li>
            </ul>
        </div>
    </div>

    <div class="container content">
        @RenderBody()
    </div>

    <video autoplay muted loop>
        <source src="~/imgs/intro.mp4" type="video/mp4" />
    </video>
    <div class="overlay"><img src="~/imgs/overlay.png" /></div>
</body>
</html>
<script type="text/javascript">
    window.addEventListener("scroll", function () {
        var mainNavContainer = document.getElementById("mainNavContainer");
        mainNavContainer.classList.toggle("sticky", window.scrollY > 0);
    });
</script>
<script src="https://kit.fontawesome.com/c8d8f98236.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
