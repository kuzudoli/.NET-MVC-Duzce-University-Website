                <h4>@Model.Duyuru.DuyuruBaslik</h4>
                <p>@Model.Duyuru.DuyuruAciklama</p>
            </div>
        </div>
    </div>
    <div class="overlay"><img src="~/imgs/campus-bg.jpg"></div>
</section>