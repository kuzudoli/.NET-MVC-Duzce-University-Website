@model Bolum
@{
    Layout = "_PanelLayout";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Bölüm Ekle-Düzenle</h3>
    </div>
    <form asp-controller="Panel" asp-action="EditBolumler" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Bölüm Adı</label>
                <input asp-for="BolumAdi" class="form-control" id="exampleInputEmail1" placeholder="Bölüm Adı">
            </div>

            <div class="form-group">
                <label>Bölüm Tipi</label>
                <select class="form-control select2 select2-hidden-accessible" asp-for="BolumTipi" id="fakulteler" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                    <option value="Lisans">Lisans</option>
                    <option value="Lisansüstü">Lisansüstü</option>
                </select>
            </div>

            <div class="form-group">
                <label>Fakülte</label>
                <select class="form-control select2 select2-hidden-accessible" asp-for="FakulteId" id="fakulteler" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                    @foreach (var fakulte in ViewBag.Funds)
                    {
                        <option value="@fakulte.Id">@fakulte.FakulteAd</option>
                    }
                </select>
            </div>



            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile">
                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text">Upload</span>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer" style="float: left; background-color: white">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
        <div class="card-footer" style="float: righ; background-color: whitet">
            <button asp-controller="Panel" asp-action="Bolumler" class="btn btn-warning">Geri Dön</button>
        </div>
    </form>
</div>
